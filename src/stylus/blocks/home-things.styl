.home-things
	z-index 1
	position absolute
	right 0
	bottom 30px
	
	&__wrap
		position relative
		display block
		height 453px
		width 522px
		text-decoration none
		
	&__img
		z-index 1
		position absolute
		right 0
		opacity-none() 
		-webkit-transition all 0.2s ease-in-out
		-moz-transition all 0.2s ease-in-out 
		-o-transition all 0.2s ease-in-out
		transition all 0.2s ease-in-out
		
	&__img-hover
		z-index 1
		position absolute
		right 0
		opacity-full() 
		-webkit-transition all 0.2s ease-in-out
		-moz-transition all 0.2s ease-in-out 
		-o-transition all 0.2s ease-in-out
		transition all 0.2s ease-in-out
		
	&__img-bg
		z-index 2
		position absolute
		top 110px
		right 0
		
	&__content
		z-index 3
		display block
		position relative
		width 260px
		padding-top 210px
		margin-right 40px
		color black
		text-align center
		
	&__title
		margin-bottom 30px
		padding-x(25px)
		color white
		font-size 28px
		line-height 36px
		text-transform uppercase
		single-line()
		
	&__subtitle
		font-size 18px
		line-height 30px
		text-transform uppercase
		single-line()
		
	&__separator
		display block
		width 180px
		margin-x(auto)
		padding 2px 0
		font-size 20px
		line-height 45px 
		background url('images/back_tenthings_home_span.jpg') center repeat-x 
		text-align center
		-webkit-transition all 0.5s ease-in-out 
		-moz-transition all 0.5s ease-in-out 
		-o-transition all 0.5s ease-in-out 
		transition all 0.5s ease-in-out
		
		span
			padding 0 10px
			background white
			font-style italic
			single-line()
			
	&__text
		font-size 12px
		single-line()
		
	&__arrow
		color #641f75
		font-size 10px
		text-transform uppercase
		-webkit-transition all 0.2s ease-in-out 
		-moz-transition all 0.2s ease-in-out 
		-o-transition all 0.2s ease-in-out 
		transition all 0.2s ease-in-out
		
		img
			display block
			margin-x(auto)
		

.home-things
	&:hover
		
		.home-things__img
			opacity-full()
			
		.home-things__img-hover
			opacity-none()
			
		.home-things__separator
			width 100%
			
		.home-things__arrow
			padding-top 7px
			
			img
				margin-top 2px